{
  "name": "beautiful-markdown",
  "version": "0.1.0",
  "scripts": {
    "start": "npx eleventy --input content --output docs --serve",
    "build": "cleancss -o dist/bfmd.min.css src/bfmd.css && npx eleventy --input content --output docs",
    "release": "npx gh-release && npm publish"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "clean-css-cli": "^5.2.0",
    "nunjucks": "^3.2.3"
  },
  "description": "CSS stylesheet to create beautiful web pages in markdown language",
  "main": "dist/bfmd.min.css",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "gh-release": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bndp/beautiful-markdown.git"
  },
  "keywords": [
    "css stylesheet",
    "markdown",
    "classless",
    "material design"
  ],
  "author": "bmdp",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bndp/beautiful-markdown/issues"
  },
  "homepage": "https://github.com/bndp/beautiful-markdown#readme"
}